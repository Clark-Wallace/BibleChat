    "express-rate-limit": "^7.0.1",
    "helmet": "^7.0.0",
    "ioredis": "^5.3.2",
    "joi": "^17.10.2",
    "jsonwebtoken": "^9.0.2",
    "openai": "^4.20.1",
    "pg": "^8.11.3",
    "redis": "^4.6.10",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
