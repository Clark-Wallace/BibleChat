# Environment Configuration Example
# Copy this file to .env and fill in your actual values

# Environment
NODE_ENV=development
PORT=3000

# Database - Get from Supabase or your PostgreSQL provider
DATABASE_URL=postgresql://username:password@host:port/database
DATABASE_POOL_SIZE=10

# OpenAI - Get from https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-...your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.7

# Redis (Optional - for caching)
REDIS_URL=redis://localhost:6379
REDIS_CACHE_TTL=3600

# Security - CHANGE THESE IN PRODUCTION
JWT_SECRET=change-this-to-a-random-secret-key
SESSION_SECRET=change-this-to-another-random-secret
BCRYPT_ROUNDS=10

# API Configuration
API_RATE_LIMIT_FREE=1000
API_RATE_LIMIT_PAID=10000
API_RATE_LIMIT_WINDOW_MS=3600000

# CORS - Add your frontend URL
CORS_ORIGIN=http://localhost:5688

# Bible Data
DEFAULT_TRANSLATION=KJV
ENABLE_MULTIPLE_TRANSLATIONS=true

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Development API Key (generate your own)
DEV_API_KEY=generate-your-own-api-key-here